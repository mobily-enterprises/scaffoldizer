#!/usr/bin/env node
const { program } = require('commander')
const scaffoldizerPackageJson = require('../package.json')
const commands = require('../commands')
// const globals = require('./globals')

main()

async function main () {
  //
  // Set the version depending on package.json
  program.version(scaffoldizerPackageJson.version)

  // The main command: addss
  program
    .command('add <scaffold> <dstDir> [modules...]')
    .description('Add scaffold <scaffold> to the the project in <dstDir>. <scaffold> can be an NPM module or a local directory.  You can optionally pass a list of modules to install. Otherwise, a UI will be initiated to pick which modules should be installed')
    .action(commands.add)

  await program.parseAsync(process.argv)
}
